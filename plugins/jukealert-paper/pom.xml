<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.untamedears</groupId>
  <artifactId>JukeAlert</artifactId>
  <packaging>jar</packaging>
  <version>1.2.7</version>
  <name>JukeAlert</name>
  <url>https://github.com/erocs/JukeAlert</url>


   <properties>
      <maven.compiler.source>1.6</maven.compiler.source>
      <maven.compiler.target>1.6</maven.compiler.target>
    </properties>

  <build>
    <sourceDirectory>${basedir}/src</sourceDirectory>

    <resources>
      <resource>
        <directory>${basedir}</directory>
        <includes>
          <include>*.yml</include>
          <include>LICENSE.txt</include>
        </includes>
      </resource>
    </resources>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>craftbukkit</artifactId>
      <version>1.7.10-R0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>vg.civcraft.mc.namelayer</groupId>
      <artifactId>NameLayer</artifactId>
      <version>2.1.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>vg.civcraft.mc.citadel</groupId>
      <artifactId>Citadel</artifactId>
      <version>3.0.12-40</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.kitteh</groupId>
      <artifactId>VanishNoPacket</artifactId>
      <version>3.19</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.untamedears.ItemExchange</groupId>
      <artifactId>ItemExchange</artifactId>
      <version>1.0.0-58</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>bukkit-repo</id>
      <url>http://repo.bukkit.org/content/groups/public/</url>
    </repository>
    <repository>
      <id>NameLayer-repo</id>
      <url>http://192.99.169.83:8080/plugin/repository/project/NameLayer-master/Build/20/repository/</url>
    </repository>
    <repository>
      <id>Citadel-repo</id>
      <url>http://192.99.169.83:8080/plugin/repository/project/Citadel-master/Build/40/repository/</url>
    </repository>
    <repository>
      <id>ItemExchange-repo</id>
      <url>http://192.99.169.83:8080/plugin/repository/project/ItemExchange-master/Build/58/repository/</url>
    </repository>
  </repositories>
</project>